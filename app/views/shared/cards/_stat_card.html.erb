<!-- _stat_card.html.erb -->
<div
  class="
    bg-white rounded-lg shadow p-6 flex flex-col justify-between
    <%= extra_classes %>
  "
>
  <div class="flex items-center justify-between mb-2">
    <h2 class="text-lg font-semibold"><%= title %></h2>
    <%# arrow + % %>
    <% if delta %>
      <span
        class="flex items-center gap-1 <%= delta.starts_with?('-') ? 'text-red-500' : 'text-green-600' %>"
      >
        <i class="material-symbols-outlined text-xs"><%= delta.starts_with?("-") ? "arrow_downward" : "arrow_upward" %></i><%= delta.delete_prefix("+") %>
      </span>
    <% end %>
  </div>

  <p class="text-4xl font-bold mb-4"><%= big_number %></p>

  <% if small_stats %>
    <div class="flex flex-col space-y-1.5 text-sm">
      <% small_stats.each do |label, value| %>
        <div class="flex justify-between">
          <span class="text-gray-600"><%= label %></span>
          <span class="font-semibold"><%= value %></span>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
