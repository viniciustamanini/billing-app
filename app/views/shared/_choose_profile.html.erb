<div class="w-full max-w-4xl mx-auto px-4 py-8">
  <h2 class="text-2xl font-bold text-center mb-6"><%= t("choose_your_profile") %></h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% client_profiles = @profiles.select { |p| p.profile_type.name == "client" } %>
    <% employee_profiles = @profiles.select { |p| p.profile_type.name == "employee" } %>
    <% admin_profiles = @profiles.select { |p| p.profile_type.name == "administrator" } %>

    <%= link_to customer_dashboard_path do %>
      <div
        class="
          bg-white shadow rounded-lg flex flex-col items-center p-6 hover:shadow-lg
          transition-shadow
        "
      >
        <div
          class="
            bg-yellow-400 w-16 h-16 rounded-full flex items-center justify-center mb-4
          "
        >
          <i class="material-icons text-white">person</i>
        </div>
        <h3 class="text-lg font-semibold mb-2"><%= t("customer_profile_description") %></h3>
        <p class="text-gray-600 text-center mb-4">
          Default para visualizar itens pendentes
        </p>
      </div>
    <% end %>

    <% if employee_profiles.any? %>
      <% employee_profiles.each do |employee_profile| %>
        <%= link_to root_path, title: t("employee_profile_hint") do %>
          <div
            class="
              bg-white shadow rounded-lg flex flex-col items-center p-6 hover:shadow-lg
              transition-shadow
            "
          >
            <div
              class="
                bg-gray-600 w-16 h-16 rounded-full flex items-center justify-center mb-4
              "
            >
              <i class="material-icons text-white">work</i>
            </div>
            <h3 class="text-lg font-semibold mb-2"><%= employee_profile.company.name.upcase %></h3>
            <p class="text-gray-600 text-center mb-4">
              Gerencie tarefas e relat√≥rios de forma eficiente
            </p>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <% if admin_profiles.any? %>
      <% admin_profiles.each do |admin_profile| %>
        <%= link_to root_path, title: t("admin_profile_hint") do %>
          <div
            class="
              bg-white shadow rounded-lg flex flex-col items-center p-6 hover:shadow-lg
              transition-shadow
            "
          >
            <div
              class="
                bg-black w-16 h-16 rounded-full flex items-center justify-center mb-4 border
                border-white
              "
            >
              <i class="material-icons text-gold">crown</i>
            </div>
            <h3 class="text-lg font-semibold mb-2"><%= admin_profile.company.name.upcase %></h3>
            <p class="text-gray-600 text-center mb-4">
              Acesso completo a todos os recursos
            </p>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <% if employee_profiles.empty? && admin_profiles.empty? %>
      <div
        class="
          bg-white shadow rounded-lg flex flex-col items-center p-6 hover:shadow-lg
          transition-shadow
        "
      >
        <div
          class="
            bg-blue-500 w-16 h-16 rounded-full flex items-center justify-center mb-4
          "
        >
          <i class="material-icons text-white">add_business</i>
        </div>
        <h3 class="text-lg font-semibold mb-2">Criar Empresa</h3>
        <p class="text-gray-600 text-center mb-4">
          Cadastre uma nova empresa e seja o administrador
        </p>
        <%= link_to "Criar Empresa", new_company_path, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8 text-center">
    <%= link_to "Registrar nova empresa", new_company_path, class: "btn-primary shadow" %>
  </div>
</div>
