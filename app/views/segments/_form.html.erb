<%= form_with model: [@company, @segment], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descrição" %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :overdue_range_id, "Faixa de Atraso" %>
    <%= f.collection_select :overdue_range_id,
                        @company.overdue_ranges.order(:days_from),
                        :id,
                        :name,
                        prompt: "Selecione...",
                        class: "form-control" %>
  </div>

  <div class="mb-3 d-flex gap-2">
    <div>
      <%= f.label :debt_min, "Valor Mínimo (R$)" %>
      <%= f.number_field :debt_min, step: 0.01, class: "form-control" %>
    </div>
    <div>
      <%= f.label :debt_max, "Valor Máximo (R$)" %>
      <%= f.number_field :debt_max, step: 0.01, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :include_active_customer, class: "form-check-input" %>
    <%= f.label :include_active_customer,
            "Incluir clientes ativos",
            class: "form-check-label" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :include_inactive_customer, class: "form-check-input" %>
    <%= f.label :include_inactive_customer,
            "Incluir clientes inativos",
            class: "form-check-label" %>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "Segmento Ativo", class: "form-check-label" %>
  </div>

  <div class="mt-4">
    <%= f.submit(
      @segment.new_record? ? "Salvar Segmento" : "Atualizar Segmento",
      class: "btn btn-warning",
    ) %>
    <%= link_to "Cancelar",
    company_segments_path(@company),
    class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
