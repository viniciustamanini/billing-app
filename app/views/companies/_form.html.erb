<div class="session-box">
  <%= form_with model: @company do |form| %>
    <% if @company.errors.any? %>
      <% @company.errors.full_messages.each do |message| %>
        <div id="toasts" class="fixed top-4 right-4 z-50 w-80 space-y-4">
          <%= render "shared/toast", icon: "error", message: message, show_undo: false %>
        </div>
      <% end %>
    <% end %>

    <div class="field field-input-container">
      <%= form.label :name, "Nome", class: "block mb-1 text-white" %>
      <%= form.text_field :name, class: "input-primary", placeholder: "Nome da empresa" %>
    </div>

    <div class="field field-input-container">
      <div class="flex justify-between">
        <%= form.label :email, "Email", class: "block mb-1 text-white flex items-center" %>
        <i
          class="material-symbols-outlined text-[var(--color-gold)]"
          title="<%= t("email_info") %>"
        >info</i>
      </div>
      <%= form.email_field :email,
                       class: "input-primary",
                       placeholder: "email@noreply.com" %>
                       <%# disabled: true %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div class="field field-input-container">
        <%= form.label :zip_code, "CEP", class: "block mb-1 text-white" %>
        <%= form.number_field :zip_code,
                          class: "w-full p-2 rounded bg-white text-black",
                          placeholder: "00000-000" %>
      </div>
      <div class="field field-input-container">
        <%= form.label :state, "UF", class: "block mb-1 text-white" %>
        <%= form.select :state,
                    options_for_select([%w[Selecione SC PR RS]]),
                    {},
                    class: "w-full p-2 rounded bg-white text-black appearance-none" %>
      </div>
    </div>

    <div class="field field-input-container">
      <%= form.label :city, "Cidade", class: "block mb-1 text-white" %>
      <%= form.select :city,
                  options_for_select(
                    [["Selecione", "Cidade um", "Cidade dois", "Cidade tres"]],
                  ),
                  {},
                  class: "input-primary" %>
    </div>

    <div class="field field-input-container">
      <%= form.label :address, "Logradouro", class: "block mb-1 text-white" %>
      <%= form.text_field :address, class: "input-primary", placeholder: "EndereÃ§o" %>
    </div>

    <div class="field field-checkbox-container">
      <%= check_box_tag :default_profile, "true", false, class: "checkbox-gold" %>
      <%= label_tag :default_profile, t("set_as_default_profile"), class: "text-white" %>
    </div>

    <div class="flex justify-between w-70 justify-self-end mt-6">
      <%= form.submit "Salvar",
                  class: "btn-primary" %>

      <button type="button" class="btn-secondary" data-action="click->modal#close">
        Cancelar
      </button>
    </div>
  <% end %>
</div>
