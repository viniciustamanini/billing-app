<%= form_with model: [@company, @overdue_range], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Descrição da faixa" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3 d-flex gap-2">
    <div>
      <%= f.label :days_from, "Dias de atraso (de)" %>
      <%= f.number_field :days_from, class: "form-control", min: 0 %>
    </div>
    <div>
      <%= f.label :days_to, "Dias de atraso (até)" %>
      <%= f.number_field :days_to, class: "form-control", min: 0 %>
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "Faixa ativa", class: "form-check-label" %>
  </div>

  <div class="mt-4">
    <%= f.submit(
      @overdue_range.new_record? ? "Salvar Faixa" : "Atualizar Faixa",
      class: "btn btn-warning",
    ) %>
    <%= link_to "Cancelar",
    company_segments_path(@company),
    class: "btn btn-outline-secondary ms-2" %>
  </div>
<% end %>
